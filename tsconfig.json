{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "app/**/*.ts",
    "typings/globals/**/*.d.ts",
    "typings/modules/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/manual_typings",
    "typings/modules/gulp"
  ]
}
